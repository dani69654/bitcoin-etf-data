{
    "name": "bitcoin-etf-data",
    "version": "2.0.0",
    "description": "A fetch-based Node.js/TypeScript scraper that extracts daily Bitcoin ETF data from farside.co.uk.",
    "main": "dist/index.js",
    "types": "index.ts",
    "files": [
        "dist/index.js",
        "index.ts"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/dani69654/bitcoin-etf-data.git"
    },
    "bugs": {
        "url": "https://github.com/dani69654/bitcoin-etf-data/issues"
    },
    "homepage": "https://github.com/dani69654/bitcoin-etf-data#readme",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "ts-node index.ts",
        "prepare": "tsc",
        "build:prod": "esbuild index.ts --bundle --platform=node --minify --target=node20 --outfile=dist/index.js --external:express --external:node-telegram-bot-api",
        "pack": "npm pack --dry-run",
        "size": "npm pack --dry-run | tail -1",
        "prepublishOnly": "npm run build:prod",
        "publish:patch": "npm version patch && npm publish",
        "publish:minor": "npm version minor && npm publish",
        "publish:major": "npm version major && npm publish"
    },
    "keywords": [
        "bitcoin",
        "etf",
        "scraper",
        "fetch",
        "data",
        "farside",
        "typescript"
    ],
    "author": "Daniele Martinelli",
    "license": "ISC",
    "devDependencies": {
        "esbuild": "^0.25.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
